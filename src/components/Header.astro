---
const {title, text, subtext, button} = Astro.props;
---

<header id="hola">
  <div class="content-box"> 
    <h1>{title} <span>Front End Developer</span></h1>
    <p>{text}</p>
    <br>
    <p>{subtext}</p>
  </div>
  <button class="primarybutton">
  <a href="#contact">{button}</a>
  </button>
</header>

<style lang="scss">
  @use '../assets/sass/index' as *;

  header {
    background-image: linear-gradient(to bottom, rgba(0, .6,.6, 0%), rgba(0,.5,.5, 100%)), url("../assets/image/headerMovil.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    width: 100%;
  }

  .content-box {
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: left; 
    text-align: left; 

    h1 {
      margin-top: 100px;
    }
    
    p {
      margin-top: 10px;
    }
  }

  span { 
    color: $tertiary;
    font-family: monospace; 
  }

  @media only screen and (min-width: 1024px) {

    h1 {
      font-size: 3rem;
    }

    header {
      background-image: linear-gradient(to bottom, rgba(0, .6,.6, 0%), rgba(0,.2,.2,60%)), url("../assets/image/header.webp");
      background-size: cover;
      background-position: center center;
      overflow: hidden;
    }

    .content-box {
      max-width: 600px;
      
    }

    .primarybutton {
      width: 300px;
      margin: 70px 3%;
    }
  }
</style>
