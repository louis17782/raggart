---
import logo2 from "../assets/image/pipo.png";
import logo3 from "../assets/image/Gallery3.jpg";
import logo4 from "../assets/image/Gallery5.jpg";
import logo5 from "../assets/image/Gallery6.png";
---
<section id="media">
  <h2>SOCIAL</h2>
  <div class="underline"></div>
  <figure>
    <a href="https://open.spotify.com/intl-es/artist/011RlZS72X5YMFxJPmfr7C?si=im3MCWXwSiCscrzHN4qsCw" target="_blank"><i class="ph-fill ph-spotify-logo"></i></a>
    <a href="https://www.youtube.com/@DjRaggart" target="_blank"><i class="ph-fill ph-youtube-logo"></i></a>
    <a href="https://tidal.com/browse/artist/14085152" target="_blank"><i class="ph-fill ph-tidal-logo"></i></a>
    <a href="https://www.deezer.com/mx/artist/5577174" target="_blank"><i class="ph-fill ph-equalizer"></i></a>
  </figure>
  <p class="name">RAGGART</p>
</section>
<div class="radio-container">
    <div class="contents-row">
    <img src={logo2.src} alt="logo">
    <img src={logo3.src} alt="logo">
  </div>
  <iframe  src="https://player.radioking.io/raggart/?c=%232F3542&c2=%237BED9F&f=h&i=1&p=1&s=1&li=0&popup=0&plc=NaN&h=undefined&l=100&v=2&fullsize" style="border-radius: 5px; width: 100%; height: 145px;" frameBorder="0" >
  </iframe><script is:inline type="text/javascript" src="https://player.radioking.io/scripts/iframe.bundle.js"></script>
    <div class="contents-row">
    <img src={logo4.src} alt="logo">
    <a href="https://luissanteliz.dev/" target="_blank"><img src={logo5.src} alt="logo"></a>
  </div>
</div>

<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: black;
    padding: 120px 0;
  }

  section a  {
    display: flex;
    align-items: center;
    margin-top: 50px;
    font-size: 1.5rem;

    i {
      font-size: 5rem;
      cursor: pointer;
      margin-left: 20px;
      color: $purple;
    }
  }

  figure {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;

    i {
      margin: 0 20px;
      cursor: pointer;
      color: white;
      transition: color 0.3s, transform 0.3s;
    }

    a:hover i {
      color: #8e27ff;
      transform: scale(1.2);
    }
  }

  .underline {
    background-color: $purple;
  }

  .name {
    width: 80%;
    font-size: 3rem;
    font-weight: bold;
    color: white;
    padding: 10px;
    background-color: transparent;
    border-radius: 5px; 
    box-shadow: 0 0 10px 10px rgba($purple, 35%);
    text-align: center;
    margin-top: 40px;
  }
  //RADIO
  .radio-container {
    position: fixed; 
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #000; 
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center; 
    z-index: 10;
  }
  .contents-row {
    display: none;
  }

  @media only screen and (min-width: 820px)  {
    .radio-container img {
      width: 60px;
      height: 60px;
    }
    .contents-row {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto 0px;
    }

    .contents-row img {
      margin: 0 0px;
    }
  }

  @media only screen and (min-width: 1024px) {

    section {
      padding: 150px 0;
    }

    .name {
      width: 40%;
      margin-top: 60px;
    }

    figure {
      flex-direction: row;
    }

    .radio-container img {
      width: 90px;
      height: 90px;
    }
    .contents-row {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: auto 80px;
    }

    .contents-row img {
      margin: 0 10px;
    }
  }
</style>
