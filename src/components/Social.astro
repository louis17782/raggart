---
import logo from "../assets/image/logoradio.png";
const radioUrl = "https://play.radioking.io/raggart";
---
<section id="media">
  <h2>SOCIAL</h2>
  <div class="underline"></div>
  <figure>
    <a href="https://open.spotify.com/intl-es/artist/011RlZS72X5YMFxJPmfr7C?si=im3MCWXwSiCscrzHN4qsCw" target="_blank"><i class="ph-fill ph-spotify-logo"></i></a>
    <a href="https://www.youtube.com/@DjRaggart" target="_blank"><i class="ph-fill ph-youtube-logo"></i></a>
    <a href="https://tidal.com/browse/artist/14085152" target="_blank"><i class="ph-fill ph-tidal-logo"></i></a>
    <a href="https://www.deezer.com/mx/artist/5577174" target="_blank"><i class="ph-fill ph-equalizer"></i></a>
  </figure>
  <p class="name">RAGGART</p>
</section>
<div class="radio-container">
  <iframe  src="https://player.radioking.io/raggart/?c=%232F3542&c2=%237BED9F&f=h&i=0&p=1&s=0&li=0&popup=0&plc=NaN&h=undefined&l=100&v=2&fullsize" style="border-radius: 5px; width: 100%; height: 145px; " frameBorder="0" ></iframe><script type="text/javascript" src="https://player.radioking.io/scripts/iframe.bundle.js"></script>
</div>

<style lang="scss">
  @use "../assets/sass/index" as *;

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: black;
    padding: 120px 0;
  }

  section a  {
    display: flex;
    align-items: center;
    margin-top: 50px;
    font-size: 1.5rem;

    i {
      font-size: 5rem;
      cursor: pointer;
      margin-left: 20px;
      color: $purple;
    }
  }

  figure {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0;

    i {
      margin: 0 20px;
      cursor: pointer;
      color: white;
      transition: color 0.3s, transform 0.3s;
    }

    a:hover i {
      color: #8e27ff;
      transform: scale(1.2);
    }
  }

  .underline {
    background-color: $purple;
  }

  .name {
    width: 80%;
    font-size: 3rem;
    font-weight: bold;
    color: white;
    padding: 10px;
    background-color: transparent;
    border-radius: 5px; 
    box-shadow: 0 0 10px 10px rgba($purple, 35%);
    text-align: center;
    margin-top: 40px;
  }
  //RADIO
  .radio-container {
    position: fixed; 
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #000; 
    color: white; 
    display: flex;
    justify-content: space-around;
    align-items: center; 
    padding: 10px; 
    box-shadow: 0 -5px 10px rgba(0, 0, 0, 0.5); 
    z-index: 10;
  }

  .radio-container > div {
    display: flex; 
    justify-content: center;
    gap: 20px;
  }

  #play-button {
    width: 50px;
    height: 50px;
    background-image: url('../assets//image/play.png');
    background-size: cover; 
    background-position: center;
    background-repeat: no-repeat;
    background-color: transparent;
    cursor: pointer; 
    transition: transform 0.2s, background-color 0.3s; 
  }

  #play-button:hover {
    transform: scale(1.1);
    background-color: rgba(255, 255, 255, 0.1); 
  }

  #pause-button {
    width: 50px;
    height: 50px;
    background-image: url('../assets//image/pause.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-color: transparent;
    cursor: pointer;
    transition: transform 0.2s, background-color 0.3s;
  }

  #pause-button:hover {
    transform: scale(1.1);
    background-color: rgba(255, 255, 255, 0.1);
  }

  #song-title {
    margin-top: 10px; 
    font-size: 1.2rem; 
    font-weight: bold;
    text-align: center;
  }

  @media only screen and (min-width: 1024px) {

    section {
      padding: 150px 0;
    }

    .name {
      width: 40%;
      margin-top: 60px;
    }

    figure {
      flex-direction: row;
    }

    .radio-container {
      padding: 0; 
    }

    .radio-container img {
      width: 60px;
      height: 60px;
    }

    #pause-button {
        width: 40px;
        height: 40px;
    }

    #play-button {
      width: 40px;
      height: 40px;
    }
  }
</style>
