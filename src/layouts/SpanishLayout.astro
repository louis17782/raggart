---
import Navigation from "../components/Navigation.astro";
import Openbutton from "../components/Hamburguer.astro";
import logo from "../assets/image/logoradio.png";
const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href={logo.src} />
		<meta name="viewport" content="width=device-width" />
    <meta name="description" content="cambiar esto luego">
		<meta name="generator" content={Astro.generator} /> 
		<title>music regge by raggart</title>
		<script src="https://unpkg.com/@phosphor-icons/web"></script>
	</head>
  <body>
    <Openbutton />
    <Navigation />
    <slot />
  </body>
</html>

<style is:global lang="scss">
  @use '../assets/sass/index' as *; 
    
  html {
    scroll-behavior: smooth;
  }
  
  ol, a, li {
    list-style: none;
    text-decoration: none;
  }
  
  body {
    font-size: 16px;
    margin: 0;
    padding: 0;
  }
  
  * {
    box-sizing: border-box;
  }
  
  h1 {
    font-size: 2rem;
    font-weight: $bold;
    font-family: $heading;
    color: $white;
    margin: 0 5%;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: $bold;
    font-family: $heading;
    color: $white;
    margin: 0 5%;
  }

  h3 {
    font-size: 2rem;
    font-family: $heading;
    font-weight: $bold;
    color: $white;
    margin: 0 15%; 
  }
  
  .underline {
    width: 130px;
    height: 2px;
    background-color: $red;
    justify-content: left;
    border-radius: 2px;
    margin: 0 5% 20px; 
  }
  
  p {
    font-size: 1.25rem;
    font-family: $text;
    font-weight: $regular;
    color: $white;
    margin: 0 5%; 
  }

  a {
    font-size: 1rem;
    font-weight: $regular;
    font-family: $text;
    color: $white;
  }
  
  // boton
  
  .primarybutton {
    width: 90%;
    margin: 20px 10%;
    transition: background-color 0.3s, box-shadow 0.3s;
    cursor: pointer;
  }
    
  a {
    font-family: $text;
    font-weight: $regular;
    font-size: 1.5rem;
  }
  
  .primarybutton {
    background-color: transparent;
    border-radius: 5px;
    box-shadow: 0 0 25px 15px rgba($green, 15%);
  }
  
  .primarybutton:hover {
    background-color: transparent;
    box-shadow: 0 0 25px 15px rgba($green, 25%);
  }
</style>
